@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav w-100 justify-content-between">
                    <li class="nav-item">
                     @if(Model.Waiter.FirstName != null)
                        {
                            <a class="nav-link text-dark bg-light rounded">@Model.Waiter.FirstName![0]</a>
                        }
                    </li>
                    <li class="">
                        @if (Model.Waiter.FirstName != null)
                        {
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Logout</a>
                        }
                        else
                        {
                            <a class="nav-link text-dark" asp-area="" asp-page="/Login">Login</a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


<div class="row">
</div>
<div class="row d-flex justify-content-center">
    <div class="col-12 col-md-4">
        <h3>Hi @Model.Waiter.FirstName</h3>
        <p>Select your working days</p>

        @if (TempData["login"] != null)
        {
            <div class="modal-container d-flex justify-content-center align-items-center login-row">
                <div class="card text-dark p-4 modal-pop">
                    You need to "login" to select days
                    <a class="btn btn-primary" asp-page="/Login">login</a>
                    <a asp-page="/">Home</a>
                </div>
            </div>
        }

        @if (TempData["submit"] != null)
        {
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
            <script type="text/javascript">
                toastr.success('@TempData["submit"]');
            </script>
        }
        else if (TempData["reset"] != null)
        {
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
            <script type="text/javascript">
                toastr.success('@TempData["reset"]');
            </script>
        }
        else if (TempData["message"] != null)
        {
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
            <script type="text/javascript">
                toastr.error('@TempData["message"]');
            </script>
        }

        <form method="post">

            <input type="hidden" name="WaiterFirstName" value="@Model.Waiter.FirstName">

            <table class="table table-borderless bg-light rounded">
                <thead>
                    <tr>
                        <th class=""><i class="bi bi-check2-square"></i></th>
                        <th class=""><i class="bi bi-calendar-event-fill"></th>
                        <th class="status-th">Status</th>
                        <th class="status-th">Waiters</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var day in Model.weekdays)
                    {
                        <tr class="name-color border-top">
                            @if (Model.WaiterWorkingDays.Contains(day.Value))
                            {
                                <td>
                                    <input id="@day" type="checkbox" name="SelectedDays" value="@day.Key" checked>
                                </td>
                            }
                            else if (Model.WeekDayStatus.ContainsKey(day.Value) && Model.WeekDayStatus[day.Value] >= 3)
                            {
                                <td>
                                    <input id="@day" type="checkbox" name="SelectedDays" value="@day.Key" disabled>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input id="@day" type="checkbox" name="SelectedDays" value="@day.Key">
                                </td>
                            }

                            <td>
                                <label>@day.Value</label>
                            </td>

                            @if (Model.WeekDayStatus.ContainsKey(day.Value) && Model.WeekDayStatus[day.Value] >= 3)
                            {
                                <td>
                                    <label><i class="bi bi-x-circle-fill text-danger"></i></label>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <label><i class="bi bi-circle-fill text-success"></i></label>
                                </td>
                            }

                            @foreach (var group in Model.Schedule)
                            {
                                if (day.Value == group.Key)
                                {
                                    <td>

                                        @foreach (var waiter in group)
                                        {
                                            <li class="font-300">@waiter.FirstName</li>
                                        }

                                    </td>
                                }
                            }
                        </tr>

                    }

                </tbody>
            </table>

            @if (Model.WaiterWorkingDays.Count() > 0)
            {
                <input type="submit" class="btn btn-primary" value="Update">
                <input asp-page-handler="reset" type="submit" class="btn btn-danger" value="Reset">
            }
            else
            {
                <input type="submit" class="btn btn-success">
            }

        </form>
    </div>
    <div class="col-12 col-md-4 mt-4">
        @if (Model.WaiterWorkingDays.Count() > 0)
        {
            <table class="table w-50" style="background-color: #grey;color: #fff;">
                <tbody>
                    <tr>
                        <th>SELECTED DAYS</th>
                    </tr>
                    @foreach (var days in Model.WaiterWorkingDays)
                    {
                        <tr>
                            <td>
                                @days
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>