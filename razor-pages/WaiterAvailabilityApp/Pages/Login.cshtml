@page
@model LoginModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row d-flex justify-content-center align-items-center">
    <h3 class="display-5 text-center">Welcome To Waiter's App</h3>
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card p-5 pb-2">
            <form class="form-group" method="post">
                <span asp-validation-for="waiter.FirstName" class="text-danger"></span>
                <input type="text" class="form-control" asp-for="waiter.FirstName" placeholder="Enter your name, e.g Anthony">
                <input type="submit" class="btn btn-success my-4" value="login">
            </form>
        </div>
    </div>
</div>


@section scripts{
   <partial name="_ValidationScriptsPartial" />
}
