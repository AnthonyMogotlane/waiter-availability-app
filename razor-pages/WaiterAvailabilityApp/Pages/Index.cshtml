@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="row">
</div>
<div class="row d-flex justify-content-center">
    <div class="col-12 col-md-4">
        <h3>Hi @Model.Waiter.FirstName</h3>
        <p>Select your working days</p>

        @if(TempData["login"] != null)
        {
            <div class="modal-container d-flex justify-content-center align-items-center">
                <div class="card text-dark p-4 modal-pop">
                    You need to "login" to select days
                    <a class="btn btn-primary" asp-page="/Login">login</a>
                    <a asp-page="/">Home</a>
                </div>
            </div>
        }

        @if(TempData["submit"] != null)
        {
            <div class="clear-pop bg-success w-100 text-center rounded my-1 p-1">@TempData["submit"]</div>
        }
        else if(TempData["reset"] != null)
        {
            <div class="clear-pop bg-success w-100 text-center rounded my-1 p-1">@TempData["reset"]</div>
        }
        else if(TempData["message"] != null)
        {
            <div class="clear-pop bg-danger w-100 text-center rounded my-1 p-1">@TempData["message"]</div>
        }

        <form method="post">

            <input type="hidden" name="WaiterFirstName" value="@Model.Waiter.FirstName">

            <table class="table bg-light rounded">
                <thead>
                    <tr>
                        <th class="w-25"><i class="bi bi-check2-square"></i></th>
                        <th class="w-25"><i class="bi bi-calendar-event-fill"></th>
                        <th class="status-th class="w-25"">Status</th>
                        <th class="w-25">Waiters</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var day in Model.weekdays)
                    {
                        <tr>
                            @if (Model.WaiterWorkingDays.Contains(day.Value))
                            {
                                <td style="width: 10%">
                                    <input id="@day" type="checkbox" name="SelectedDays" value="@day.Key" checked >
                                </td>
                            }
                            else if (Model.WeekDayStatus.ContainsKey(day.Value) && Model.WeekDayStatus[day.Value] >= 3)
                            {
                                <td style="width: 10%">
                                    <input id="@day" type="checkbox" name="SelectedDays" value="@day.Key"  disabled>
                                </td>
                            }
                            else
                            {
                                <td style="width: 10%">
                                    <input id="@day" type="checkbox" name="SelectedDays" value="@day.Key">
                                </td>
                            }

                            <td style="width: 30%">
                                <label>@day.Value</label>
                            </td>

                            @if (Model.WeekDayStatus.ContainsKey(day.Value) && Model.WeekDayStatus[day.Value] >= 3)
                            {
                                <td style="width: 15%">
                                    <label><i class="bi bi-x-circle-fill text-danger"></i></label>
                                </td>
                            }
                            else
                            {
                                <td style="width: 15%">
                                    <label><i class="bi bi-circle-fill text-success"></i></label>
                                </td>
                            }  

                            @foreach (var group in Model.Schedule)
                            {
                                if(day.Value == group.Key)
                                {
                                    <td style="width: 30%">
                                        <ul>
                                            @foreach (var waiter in group)
                                            {
                                                <li>@waiter.FirstName</li>
                                            }

                                        </ul>
                                    </td>
                                }
                            }
                        </tr>
            
                    }

                </tbody>
            </table>

            @if (Model.WaiterWorkingDays.Count() > 0)
            {
                <input type="submit" class="btn btn-primary" value="Update">
                <input asp-page-handler="reset" type="submit" class="btn btn-danger" value="Reset">
            }
            else
            {
                <input type="submit" class="btn btn-success">
            }

        </form>
    </div>
    <div class="col-12 col-md-4">
        @if (Model.WaiterWorkingDays.Count() > 0)
        {
            <table class="table w-50" style="background-color: #grey;color: #fff;">
                <tbody>
                    <tr>
                        <th>SELECTED DAYS</th>
                    </tr>
                @foreach (var days in Model.WaiterWorkingDays)
                {
                    <tr>
                        <td>
                            @days
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }    
    </div>
</div>


@section scripts {

    <script>
        const clearPop = document.querySelector(".clear-pop");
        clearPop.style.visibility = "visible";

        setTimeout(() => {
            clearPop.style.visibility = "hidden";
        }, 3000);
    </script>

}
